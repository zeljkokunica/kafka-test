        <version>1.0-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <groupId>com.demo.kafka</groupId>
    <artifactId>accounts-impl</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>accounts-impl</name>
    <description>Accounts service</description>

    <packaging>jar</packaging>

    <dependencies>

        <dependency>
            <groupId>com.demo.kafka</groupId>
            <artifactId>accounts-api</artifactId>
        </dependency>

        <dependency>
            <groupId>com.demo.kafka</groupId>
